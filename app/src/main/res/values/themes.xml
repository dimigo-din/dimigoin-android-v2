<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Dimigoin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/dimigoMagenta</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/grey250</item>
		<item name="android:windowLightStatusBar">true</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.Dimigoin.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.Dimigoin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.Dimigoin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>